{
    "opts"      : {
        "template": "node_modules/jsdoc3-bootstrap"
    },
    "tags"      : {
        "allowUnknownTags" : true
    },
    "plugins"   : [
        "plugins/markdown",
        "plugins/overloadHelper",
        "plugins/sourcetag"
    ],
    "templates" : {
        "cleverLinks"         : true,
        "monospaceLinks"      : true,
        "outputSourceFiles"   : true,
        "outputSourcePath"    : true
    },
    "markdown"  : {
        "parser"   : "gfm",
        "hardwrap" : true
    }
}
